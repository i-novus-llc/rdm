            </dependency>

            <dependency>
                <groupId>ru.i-novus.ms.rdm</groupId>
                <artifactId>rdm-web-spring-boot-autoconfigure</artifactId>
                <version>5.1.0</version>
            </dependency>

            <dependency>
                <groupId>ru.i-novus.components</groupId>
                <artifactId>versioned-data-storage-api</artifactId>
