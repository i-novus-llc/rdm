<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Журнал операций">
    <regions>
        <region place="single">
            <table id="asyncLogTable" name="Журнал операций" query-id="asyncLog" size="10">
                <filters>
                    <row>
                        <input-text id="opId" label="Идентификатор операции" domain="string"/>
                        <input-select id="opType" label="Тип операции" type="multi" query-id="asyncOperationTypes" label-field-id="opType" search-field-id="opType"/>
                        <input-select id="status" label="Статус операции" type="multi" query-id="asyncOperationStatuses" label-field-id="status" search-field-id="status"/>
                    </row>
                </filters>
                <columns>
                    <column text-field-id="tsStart" label="Дата создания действия операции (UTC)">
                        <text format="date DD.MM.YYYY HH:mm:ss"/>
                    </column>
                    <column text-field-id="tsEnd" label="Дата окончания действия операции (UTC)">
                        <text format="date DD.MM.YYYY HH:mm:ss"/>
                    </column>
                    <column text-field-id="opId" label="Идентификатор операции"/>
                    <column text-field-id="opType" label="Тип операции"/>
                    <column text-field-id="status" label="Статус операции"/>
                </columns>

            </table>
        </region>
    </regions>
</page>
