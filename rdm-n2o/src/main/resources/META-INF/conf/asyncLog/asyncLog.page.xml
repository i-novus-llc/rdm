<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Журнал операций">
    <table id="asyncLogTable" name="Журнал операций" query-id="asyncLog" size="10">
        <filters>
            <row>
                <input-text id="uuid" label="Идентификатор операции" domain="string"/>
                <input-select id="operation" label="Тип операции" type="single" query-id="asyncOperationTypes" label-field-id="id" search="false"/>
                <input-select id="status" label="Статус операции" type="single" query-id="asyncOperationStatuses" label-field-id="id" search="false"/>
            </row>
        </filters>
        <columns>
            <column text-field-id="tsStart" label="Дата создания действия операции (UTC)">
                <text format="date DD.MM.YYYY HH:mm:ss"/>
            </column>
            <column text-field-id="tsEnd" label="Дата окончания действия операции (UTC)">
                <text format="date DD.MM.YYYY HH:mm:ss"/>
            </column>
            <column text-field-id="uuid" label="Идентификатор операции"/>
            <column text-field-id="operation" label="Тип операции"/>
            <column text-field-id="status" label="Статус операции"/>
        </columns>
    </table>
</simple-page>
