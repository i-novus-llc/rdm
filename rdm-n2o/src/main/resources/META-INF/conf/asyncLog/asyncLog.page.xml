<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0">
    <regions>
        <region place="single">
            <table id="asyncLogTable" name="Журнал операций" query-id="asyncLog" size="10">
                <filters>
                    <row>
                        <input-text id="id" label="Идентификатор операции" domain="string"/>
                        <input-select id="operation" label="Тип операции" type="single" query-id="asyncOperationTypes" label-field-id="id" search="false"/>
                        <input-select id="status" label="Статус операции" type="single" query-id="asyncOperationStatuses" label-field-id="id" search="false"/>
                    </row>
                </filters>
                <columns>
                    <column text-field-id="tsStart" label="Дата создания операции">
                        <text format="date DD.MM.YYYY HH:mm:ss"/>
                    </column>
                    <column text-field-id="tsEnd" label="Дата окончания операции">
                        <text format="date DD.MM.YYYY HH:mm:ss"/>
                    </column>
                    <column text-field-id="code" label="Код справочника"/>
                    <column text-field-id="id" label="Идентификатор операции"/>
                    <column text-field-id="operation" label="Тип операции"/>
                    <column text-field-id="status" label="Статус операции"/>
                </columns>
                <rows>
                    <click>
                        <show-modal page-id="asyncLogEntryFullInfo" detail-field-id="id" route="/:id/view"/>
                    </click>
                </rows>
            </table>
        </region>
    </regions>
</page>