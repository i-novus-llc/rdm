<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0" name="Типы операций">
    <list count-mapping="[totalElements]" result-mapping="[content]">
        <rest>${rdm.backend.path}/asynclog</rest>
    </list>
    <unique filters="opId">
        <rest>${rdm.backend.path}/asynclog/entry/{opId}</rest>
    </unique>
    <fields>
        <field id="opId" domain="string">
            <select mapping="['uuid'].toString()"/>
            <filters>
                <eq filter-id="opId"/>
            </filters>
        </field>
        <field id="status" domain="string">
            <select mapping="['status'].name()"/>
            <filters>
                <eq filter-id="status"/>
            </filters>
        </field>
        <field id="opType" domain="string">
            <select mapping="['operation'].name()"/>
            <filters>
                <eq filter-id="opType"/>
            </filters>
        </field>
        <field id="error" domain="string">
            <select mapping="['error']"/>
        </field>
        <field id="payload" domain="object">
            <select mapping="['payload']"/>
        </field>
        <field id="result" domain="object">
            <select mapping="['result']"/>
        </field>
        <field id="tsStart" domain="localdatetime">
            <select mapping="['tsStart']"/>
        </field>
        <field id="tsEnd" domain="localdatetime">
            <select mapping="['tsEnd']"/>
        </field>
    </fields>
</query>
