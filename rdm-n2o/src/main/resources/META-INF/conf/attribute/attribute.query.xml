<?xml version='1.0' encoding='UTF-8'?>
<query xmlns:n2o="http://n2oapp.net/framework/config/schema/n2o-query-executions-1.0"
       xmlns="http://n2oapp.net/framework/config/schema/query-3.0">
    <object-id>attribute</object-id>
    <name>Атрибут</name>

    <execution>
        <n2o:java-criteria bean-name="structureController" criteria-class="ru.inovus.ms.rdm.model.AttributeCriteria"/>
    </execution>

    <fields>
        <field>
            <id>id</id>
            <domain>integer</domain>
            <filters auto-generate="true"/>
        </field>

        <field>
            <id>savedCode</id>
            <domain>string</domain>
            <display>code</display>
        </field>

        <field>
            <id>code</id>
            <domain>string</domain>
            <display/>
            <filters auto-generate="true"/>
        </field>

         <field>
             <id>versionId</id>
             <domain>integer</domain>
             <filters auto-generate="true"/>
             <display/>
        </field>

        <field>
            <id>referenceRefBook.id</id>
            <domain>integer</domain>
            <expression>referenceRefBookId</expression>
            <display/>
        </field>

        <field>
            <id>name</id>
            <domain>string</domain>
            <display/>
        </field>

        <field>
            <id>attrType.id</id>
            <domain>string</domain>
            <expression>type.name()</expression>
            <display/>
        </field>

        <field>
            <id>description</id>
            <domain>string</domain>
            <display/>
        </field>

        <field>
            <id>isPrimary</id>
            <domain>boolean</domain>
            <display/>
        </field>

        <field>
            <id>isRequired</id>
            <domain>boolean</domain>
            <display/>
        </field>

        <field>
            <id>referenceVersion.id</id>
            <domain>integer</domain>
            <expression>referenceVersion</expression>
            <display/>
        </field>

        <field>
            <id>referenceAttribute.code</id>
            <domain>string</domain>
            <expression>referenceAttribute</expression>
            <display/>
        </field>

        <field>
            <id>referenceAttribute.name</id>
            <domain>string</domain>
            <expression>referenceAttributeName</expression>
            <display/>
        </field>

        <field>
            <id>referenceDisplayAttribute.code</id>
            <domain>string</domain>
            <expression>referenceDisplayAttribute</expression>
            <display/>
        </field>

        <field>
            <id>referenceDisplayAttribute.name</id>
            <domain>string</domain>
            <expression>referenceDisplayAttributeName</expression>
            <display/>
        </field>
    </fields>
</query>