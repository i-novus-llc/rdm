<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">

    <unique filters="versionId,optLockValue" result-mapping="#this">
        <java class="ru.i_novus.ms.rdm.n2o.service.StructureController"
              method="getDefault">
            <spring/>

            <arguments>
                <argument name="criteria" type="criteria"
                          class="ru.i_novus.ms.rdm.n2o.model.AttributeCriteria"/>
            </arguments>
        </java>
    </unique>

    <fields>
        <field id="id" domain="string">
            <select mapping="code"/>
        </field>

        <field id="code" domain="string">
            <select mapping="code"/>
            <filters>
                <eq filter-id="code" mapping="['criteria'].code"/>
            </filters>
        </field>

        <field id="versionId" domain="integer">
            <select mapping="versionId"/>
            <filters>
                <eq filter-id="versionId" mapping="['criteria'].versionId"/>
            </filters>
        </field>

        <field id="optLockValue" domain="integer">
            <select/>
            <filters>
                <eq filter-id="optLockValue" mapping="['criteria'].optLockValue" default-value="0"/>
            </filters>
        </field>

        <field id="hasReferrer" domain="boolean">
            <select/>
        </field>

    </fields>
</query>