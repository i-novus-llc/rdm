<?xml version='1.0' encoding='UTF-8'?>
<table xmlns="http://n2oapp.net/framework/config/schema/n2o-widget-4.0"
       name="Структура" query-id="attribute" object-id="attribute">
    <columns>
        <column text-field-id="keyAttribute"/>
        <column text-field-id="code"/>
        <column text-field-id="name"/>
        <column text-field-id="attrType.name"/>
        <column text-field-id="description"/>
        <column text-field-id="isReference">
            <checkbox/>
        </column>
    </columns>
    <toolbar place="bottomRight">
        <button label="Добавить" id="create">
            <show-modal page-id="attribute" submit-operation-id="create"
                        master-field-id="versionId" detail-field-id="versionId"
                        upload="defaults"/>
        </button>
        <button label="Изменить" id="edit">
            <show-modal page-id="attribute" submit-operation-id="updateAttribute" submit-model="resolve">
                <pre-filters>
                    <eq field-id="versionId" value="{versionId}"/>
                    <eq field-id="code" value="{code}"/>
                </pre-filters>
            </show-modal>
        </button>
        <button label="Удалить" id="delete" color="danger">
            <invoke operation-id="delete" close-after-success="false"/>
        </button>
    </toolbar>
</table>