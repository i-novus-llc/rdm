<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Аудит действий">
    <table query-id="audit">
        <pagination/>
        <filters>
            <row>
                <input-text id="user" label="Пользователь"/>
                <date-interval id="date" label="Время" format="DD.MM.YYYY HH:mm" begin-default-time="00:00" end-default-time="23:59"/>
                <input-select id="action" label="Действие">
                    <options label-field-id="name" value-field-id="id">
                        <option>{"id":"PUBLICATION","name":"Публикация"}</option>
                        <option>{"id":"UPLOAD","name":"Загрузка справочника"}</option>
                        <option>{"id":"DOWNLOAD","name":"Выгрузка справочника"}</option>
                        <option>{"id":"LOGIN","name":"Вход в систему"}</option>
                        <option>{"id":"LOGOUT","name":"Выход из системы"}</option>
                        <option>{"id":"CREATE_REF_BOOK","name":"Создание справочника"}</option>
                        <option>{"id":"DELETE_REF_BOOK","name":"Удаление справочника"}</option>
                    </options>
                </input-select>
            </row>
        </filters>
        <columns>
            <column text-field-id="user" label="Пользователь"/>
            <column text-field-id="action" label="Действие"/>
            <column text-field-id="context" label="Справочник"/>
            <column text-field-id="date" label="Время">
                <text format="date DD.MM.YYYY hh:mm"/>
            </column>
        </columns>
    </table>
</simple-page>