<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Аудит действий">
    <table query-id="audit">
        <pagination/>
        <filters>
            <row>
                <input-text id="user" label="Пользователь"/>
                <date-interval id="date" label="Время" date-format="DD.MM.YYYY" time-format="HH:mm">
                    <default-value begin="`$.beginDay()`" end="`$.endDay()`"/>
                </date-interval>
                <input-select id="action" label="Действие">
                    <options label-field-id="name" value-field-id="id">
                        <option id="PUBLICATION" name="Публикация"/>
                        <option id="UPLOAD" name="Загрузка справочника"/>
                        <option id="DOWNLOAD" name="Выгрузка справочника"/>
                        <option id="LOGIN" name="Вход в систему"/>
                        <option id="LOGOUT" name="Выход из системы"/>
                        <option id="CREATE_REF_BOOK" name="Создание справочника"/>
                        <option id="DELETE_REF_BOOK" name="Удаление справочника"/>
                    </options>
                </input-select>
            </row>
        </filters>
        <columns>
            <column text-field-id="user" label="Пользователь"/>
            <column text-field-id="action" label="Действие"/>
            <column text-field-id="context" label="Справочник"/>
            <column text-field-id="date" label="Время">
                <text format="date DD.MM.YYYY HH:mm"/>
            </column>
        </columns>
    </table>
</simple-page>