<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0" object-id="refBook">
    <list result-mapping="['content']" count-mapping="['totalElements']">
        <java class="ru.inovus.ms.rdm.api.service.AuditLogService"
              method="getActions">
            <spring/>
            <arguments>
                <argument type="criteria" class="ru.inovus.ms.rdm.n2o.criteria.AuditCriteriaDate"/>
            </arguments>
        </java>
    </list>

    <fields>
        <field id="id" domain="integer">
            <select mapping="id"/>
        </field>

        <field id="user" domain="string">
            <select mapping="user"/>
            <filters>
                <contains filter-id="user" mapping="user" domain="string"/>
            </filters>
            <sorting/>
        </field>

        <field id="date" domain="date">
            <select mapping="date"/>
            <filters>
                <more filter-id="date.begin" mapping="fromDate"/>
                <less filter-id="date.end" mapping="toDate"/>
            </filters>
            <sorting/>
        </field>

        <field id="action" domain="string">
            <select mapping="action.name"/>
            <filters>
                <eq filter-id="action.id" mapping="action" domain="string"/>
            </filters>
            <sorting/>
        </field>

        <field id="context" domain="string">
            <select mapping="context"/>
            <filters>
                <eq filter-id="context" mapping="context" domain="string"/>
            </filters>
            <sorting/>
        </field>
    </fields>
</query>