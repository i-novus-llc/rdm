<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">

    <list result-mapping="['content']" count-mapping="['totalElements']">
        <java class="ru.i_novus.ms.rdm.n2o.service.RefBookDataController"
              method="getList">
            <spring/>

            <arguments>
                <argument name="criteria" type="criteria"
                          class="ru.i_novus.ms.rdm.n2o.api.criteria.DataCriteria"/>
            </arguments>
        </java>
    </list>

    <fields>
        <field id="id">
            <select/>
        </field>

        <field id="versionId" domain="integer">
            <filters>
                <eq filter-id="versionId" mapping="['criteria'].versionId"/>
            </filters>
        </field>

        <field id="optLockValue" domain="integer">
            <filters>
                <eq filter-id="optLockValue" mapping="['criteria'].optLockValue"/>
            </filters>
        </field>

        <field id="localeCode" domain="string">
            <filters>
                <eq filter-id="localeCode" mapping="['criteria'].localeCode"/>
            </filters>
        </field>

        <field id="columns">
            <select/>
        </field>

        <field id="row">
            <select/>
        </field>

        <field id="filter">
            <filters>
                <eq filter-id="filter" mapping="['criteria'].filter" domain="object"/>
            </filters>
        </field>

        <field id="hasDataConflict" domain="boolean">
            <filters>
                <eq filter-id="hasDataConflict" mapping="['criteria'].hasDataConflict"/>
            </filters>
        </field>

    </fields>
</query>