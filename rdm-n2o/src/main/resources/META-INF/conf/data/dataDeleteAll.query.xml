<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">

    <unique filters="versionId,optLockValue" result-mapping="#this">
        <java class="ru.i_novus.ms.rdm.n2o.service.RefBookDataController"
              method="getVersion">
            <spring/>

            <arguments>
                <argument name="versionId" type="primitive" class="java.lang.Integer"/>
                <argument name="optLockValue" type="primitive" class="java.lang.Integer"/>
            </arguments>
        </java>
    </unique>

    <fields>
        <field id="id">
            <select/>
        </field>

        <field id="versionId" domain="integer">
            <select mapping="id"/>
            <filters>
                <eq filter-id="versionId" mapping="['versionId']"/>
            </filters>
        </field>

        <field id="optLockValue" domain="integer">
            <select mapping="['optLockValue']"/>
            <filters>
                <eq filter-id="optLockValue" mapping="['optLockValue']" default-value="0"/>
            </filters>
        </field>

        <field id="message" domain="string">
            <select mapping="
                'Вы точно хотите удалить все записи из справочника &quot;' + passport['name'] + '&quot; [' + code + ']?'
                "/>
        </field>

    </fields>
</query>