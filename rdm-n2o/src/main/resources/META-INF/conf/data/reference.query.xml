<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0" object-id="refBook">

    <list result-mapping="['content']" count-mapping="['totalElements']">
        <java method="getList" class="ru.i_novus.ms.rdm.n2o.service.ReferenceController">
            <spring/>

            <arguments>
                <argument name="referenceCriteria" type="criteria"
                          class="ru.i_novus.ms.rdm.n2o.criteria.ReferenceCriteria"/>
            </arguments>
        </java>
    </list>

    <fields>
        
        <field id="id">
            <select mapping="value"/>
        </field>

        <field id="value" domain="string">
            <select/>
            <filters>
                <eq filter-id="value" mapping="['referenceCriteria'].value"/>
            </filters>
        </field>

        <field id="displayValue" domain="string">
            <select/>
            <filters>
                <eq filter-id="displayValue" mapping="['referenceCriteria'].displayValue"/>
            </filters>
        </field>

        <field id="versionId" domain="integer">
            <filters>
                <eq filter-id="versionId" mapping="['referenceCriteria'].versionId"/>
            </filters>
        </field>

        <field id="reference" domain="string">
            <filters>
                <eq filter-id="reference" mapping="['referenceCriteria'].reference"/>
            </filters>
        </field>

    </fields>
</query>