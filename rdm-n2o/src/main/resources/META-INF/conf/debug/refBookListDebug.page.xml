<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Реестр НСИ"
>
    <table query-id="refBook" route="/main">
        <pagination/>
        <rows>
            <switch value-field-id="lastHasConflict">
                <case value="true">bg-danger</case>
            </switch>
        </rows>
        <filters>
            <row>
                <input-text id="name" label="Название справочника"/>
                <input-text id="code" label="Код справочника"/>
                <date-interval id="lastPublishedVersionFromDateInterval" label="Дата последней публикации" date-format="DD.MM.YYYY"/>
                <input-select id="category" label="Категория" query-id="category" label-field-id="id"/>
                <input-select id="status" label="Статус"
                              query-id="refBookStatusList" label-field-id="name" search="false"/>
                <!--<input-select id="status" label="Статус"-->
                <!--              query-id="refBookStatusList" label-field-id="name" search="false"-->
                <!--              sec:permissions="${rdm.permissions.refbook.status.list}"/>-->
            </row>
        </filters>
        <toolbar>
            <button id="view" label="Просмотр">
                <open-page page-id="refBookView" page-name="Просмотр справочника &quot;{name}&quot; [{code}]"
                           route="/:refBookId/view">
                    <path-param name="refBookId" value="{id}"/>
                </open-page>
            </button>
            <sub-menu label="Создать" icon="fa fa-plus">
                <menu-item label="Создать" model="filter">
                    <open-page page-id="createRefBook" page-name="Создание" upload="defaults"
                               submit-operation-id="create"
                               redirect-url-after-submit="../:refBookId/edit"/>
                </menu-item>
                <menu-item label="Создать из файла" model="filter">
                    <show-modal page-id="createFromFile" page-name="Создание из файла" upload="defaults"
                                submit-operation-id="createFromFile"
                                redirect-url-after-submit="${rdm.context-path}/main/:refBookId/edit"
                                redirect-target="application">
                    </show-modal>
                </menu-item>
            </sub-menu>
            <button id="edit" label="Изменить" icon="fa fa-pencil" enabling-condition="!archived">
                <open-page page-id="refBook" page-name="Редактирование &quot;{name}&quot; [{code}]"
                           route="/:refBookId/edit">
                    <path-param name="refBookId" value="{id}"/>
                </open-page>
            </button>
            <button id="delete" label="Удалить" icon="fa fa-trash" color="danger">
<!--            <button id="delete" label="Удалить справочник" icon="fa fa-trash" color="danger" enabling-condition="!archived &amp;&amp; !hasPublished">-->
                <invoke operation-id="delete"/>
            </button>

            <button id="toArchive" label="В архив" icon="fa fa-lock"
                    visibility-condition="!archived">
                <invoke operation-id="toArchive"/>
            </button>
            <button id="fromArchive" label="Из архива" icon="fa fa-unlock"
                    visibility-condition="archived">
                <invoke operation-id="fromArchive"/>
            </button>
        </toolbar>

        <toolbar place="topRight">
            <button id="versionList" label="Версии" enabling-condition="!archived">
                <open-page page-id="refBookVersionList" page-name="Версии &quot;{name}&quot; [{code}]">
                    <query-param name="refBookId" value="{id}"/>
                    <query-param name="name" value="{name}"/>
                    <query-param name="code" value="{code}"/>
                </open-page>
                <dependencies>
                    <visibility>return ${rdm.n2o.debug}</visibility>
                </dependencies>
            </button>
            <button id="versionActions" label="Действия" enabling-condition="!archived">
                <open-page page-id="refBookVersionActions" page-name="Действия с &quot;{name}&quot; [{code}]">
                    <query-param name="refBookId" value="{id}"/>
                    <query-param name="name" value="{name}"/>
                    <query-param name="code" value="{code}"/>
                </open-page>
                <dependencies>
                    <visibility>return ${rdm.n2o.debug}</visibility>
                </dependencies>
            </button>
            <button id="versionPassport" label="Паспорт" enabling-condition="!archived">
                <open-page page-id="refBookVersionPassport" page-name="Паспорт &quot;{name}&quot; [{code}]">
                    <query-param name="refBookId" value="{id}"/>
                    <query-param name="name" value="{name}"/>
                    <query-param name="code" value="{code}"/>
                </open-page>
                <dependencies>
                    <visibility>return ${rdm.n2o.debug}</visibility>
                </dependencies>
            </button>
            <button id="versionStructure" label="Структура" enabling-condition="!archived">
                <open-page page-id="refBookVersionStructure" page-name="Структура &quot;{name}&quot; [{code}]">
                    <query-param name="refBookId" value="{id}"/>
                    <query-param name="name" value="{name}"/>
                    <query-param name="code" value="{code}"/>
                </open-page>
                <dependencies>
                    <visibility>return ${rdm.n2o.debug}</visibility>
                </dependencies>
            </button>
            <button id="versionData" label="Данные" enabling-condition="!archived">
                <open-page page-id="refBookVersionData" page-name="Данные &quot;{name}&quot; [{code}]">
                    <query-param name="refBookId" value="{id}"/>
                    <query-param name="name" value="{name}"/>
                    <query-param name="code" value="{code}"/>
                </open-page>
                <dependencies>
                    <visibility>return ${rdm.n2o.debug}</visibility>
                </dependencies>
            </button>
            <button id="localizedData" label="Перевод" enabling-condition="!archived">
                <open-page page-id="refBookLocalizedData" page-name="Перевод &quot;{name}&quot; [{code}]">
                    <query-param name="refBookId" value="{id}"/>
                    <query-param name="name" value="{name}"/>
                    <query-param name="code" value="{code}"/>
                </open-page>
                <dependencies>
                    <visibility>return ${rdm.n2o.debug}</visibility>
                </dependencies>
            </button>
            <button id="debugData" label="Отладка" enabling-condition="!archived">
                <open-page page-id="refBookDebugData" page-name="Отладка данных справочника"/>
                <dependencies>
                    <visibility>return ${rdm.n2o.debug}</visibility>
                </dependencies>
            </button>
        </toolbar>

        <columns>
            <column text-field-id="code" label="Код" width="100px" sorting-direction="asc"/>
            <column text-field-id="name" label="Наименование"/>
            <column text-field-id="displayVersion" label="Версия"/>
            <column text-field-id="category.id" label="Категория"/>
            <column text-field-id="lastPublishedVersionFromDate" label="Последняя публикация">
                <text format="date DD.MM.YYYY"/>
            </column>
<!--            вывод tooltip-сообщения пока не работает-->
            <column text-field-id="lastHasConflict" label="" type="icon" tooltip-field-id="lastHasConflictMsg">
                <icon>
                    <switch value-field-id="lastHasConflict">
                        <case value="true">fa fa-question-circle-o</case>
                    </switch>
                </icon>
            </column>
        </columns>
    </table>
</simple-page>