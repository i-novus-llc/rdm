<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Скачивание файла">
    <form object-id="refBook" default-values-query-id="versionDefault">
        <fields>
            <radio-group id="fileType" label="Тип" label-field-id="name" required="true">
                <options>
                    <option id="XLSX" name="XLSX"/>
                    <option id="XML" name="XML"/>
                </options>
            </radio-group>
            <hidden id="type" label="">
                <dependencies>
                    <set-value on="fileType">fileType.id</set-value>
                </dependencies>
            </hidden>
        </fields>
        <toolbar place="bottomRight">
            <button id="close" label="скачать">
                <a href="./files/:versionId/:type"/>
            </button>
        </toolbar>
    </form>
</simple-page>