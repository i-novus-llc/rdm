<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">

    <unique filters="id" result-mapping="#this">
        <java method="getVersion" class="ru.i_novus.ms.rdm.n2o.service.VersionController">
            <spring/>

            <arguments>
                <argument name="criteria" type="criteria"
                          class="ru.i_novus.ms.rdm.api.model.version.VersionCriteria"/>
            </arguments>
        </java>
    </unique>

    <fields>

        <field id="id"/>

        <field id="versionId" domain="integer">
            <select mapping="id"/>
            <filters>
                <eq filter-id="id" mapping="['criteria'].id"/>
            </filters>
        </field>

        <field id="optLockValue" domain="integer">
            <select/>
        </field>
        
    </fields>

</query>