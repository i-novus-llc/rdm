<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">

    <unique filters="id,optLockValue" result-mapping="#this">
        <java method="getVersion" class="ru.inovus.ms.rdm.n2o.service.VersionController">
            <spring/>

            <arguments>
                <argument type="criteria" class="ru.inovus.ms.rdm.api.model.version.VersionCriteria"/>
            </arguments>
        </java>
    </unique>

    <fields>
        <field id="id"/>

        <field id="versionId" domain="integer">
            <select mapping="id"/>
            <filters>
                <eq filter-id="id" mapping="id" domain="integer"/>
            </filters>
        </field>

        <field id="optLockValue" domain="integer">
            <select/>
            <filters>
                <eq filter-id="optLockValue" mapping="optLockValue" domain="integer" default-value="0"/>
            </filters>
        </field>
    </fields>

</query>