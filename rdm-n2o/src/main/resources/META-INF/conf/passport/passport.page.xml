<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Паспорт справочника">
    <form name="Паспорт" query-id="refBook" id="passport_form"
          master-field-id="version.id" detail-field-id="version.id" object-id="refBook">
        <fields>
            <input-select id="category" label="Категория" query-id="category" label-field-id="id"/>
            <input-text id="code" label="Код" required="true"/>
            <input-text id="name" label="Наименование" required="true"/>
            <input-text id="shortName" label="Краткое наименование"/>
            <input-text id="description" label="Описание"/>
        </fields>
        <toolbar place="bottomRight">
            <button label="Назад">
                <close/>
            </button>
        </toolbar>
    </form>
</simple-page>
