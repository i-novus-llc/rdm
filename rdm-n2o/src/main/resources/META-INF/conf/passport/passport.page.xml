<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Паспорт справочника">
    <form  query-id="passport">
        <fields>
            <row>
                <input-text id="code" label="Код" required="true" length="5">
                    <dependencies>
                        <enabling on="firstPublishedVersionFromDate">
                            typeof firstPublishedVersionFromDate == 'undefined' || firstPublishedVersionFromDate == null
                        </enabling>
                    </dependencies>
                </input-text>
                <input-text id="name" label="Наименование" required="true" length="250"/>
            </row>
        </fields>
    </form>
</simple-page>
