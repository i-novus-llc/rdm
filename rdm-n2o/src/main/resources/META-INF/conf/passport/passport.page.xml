<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-3.0"
      xmlns:fs="http://n2oapp.net/framework/config/schema/fieldset-3.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0">
    <object-id>passport</object-id>
    <layout>n2o/layout/single</layout>
    <name>Паспорт справочника</name>

    <!--NSI-M-31-->

    <regions>
        <region place="single" type="none">
            <container id="main">
                <wgt:form style="width:900px">
                    <wgt:query-id>passport</wgt:query-id>

                    <wgt:edit refresh-after-submit="true" after-submit="closeModal"
                              create-more="false" form-submit-label="Сохранить">
                        <wgt:create-or-update create-action-id="create" update-action-id="update"/>
                    </wgt:edit>

                    <fs:field-set field-label-location="top">
                        <fs:row>
                            <ctrl:input-text id="code" label="Код" required="true" control-style="width:280px" length="5">
                                <ctrl:dependencies>
                                    <ctrl:enabling-condition on="firstPublishedVersionFromDate">
                                        typeof firstPublishedVersionFromDate == 'undefined' || firstPublishedVersionFromDate == null
                                    </ctrl:enabling-condition>
                                </ctrl:dependencies>
                            </ctrl:input-text>
                            <ctrl:input-text id="fullName" label="Полное наименование" required="true"
                                             control-style="width:300px" length="250"/>
                            <ctrl:input-text id="shortName" label="Краткое наименование" required="true"
                                             control-style="width:300px" length="250"/>
                        </fs:row>

                        <ctrl:text-editor id="annotation" label="Аннотация" height="90"
                                          control-style="width:900px" css-class="n2o-control-12"/>

                        </fs:field-set>

                    <fs:field-set field-label-location="top"
                                  dependency-condition="typeof id != 'undefined' &amp;&amp; id != null">
                        <fs:row>
                            <ctrl:date-time id="firstPublishedVersionFromDate" label="Дата публикации первой верси"
                                            css-class="n2o-label-9" control-style="width:445px" readonly="true"/>
                            <ctrl:date-time id="fromDate" label="Дата публикации текущей версии"
                                            css-class="n2o-label-9" control-style="width:445px" readonly="true"/>
                        </fs:row>

                        <fs:row>
                            <ctrl:input-text id="version" label="Номер текущей версии"
                                             css-class="n2o-label-9" control-style="width:445px" readonly="true"/>
                            <ctrl:input-text id="recordsCount" label="Количество записей в текущей версии"
                                             css-class="n2o-label-9" control-style="width:445px" readonly="true"/>
                        </fs:row>

                        <ctrl:text-editor id="comment" label="Изменения в текущей версии" height="90"
                                          control-style="width:900px" css-class="n2o-control-12"
                                          dependency-condition="typeof id != 'undefined' &amp;&amp; id != null"/>
                    </fs:field-set>
                </wgt:form>
            </container>
        </region>
    </regions>

</page>
