<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Паспорт справочника">
    <form  query-id="passport">
        <fields>
            <row>
                <input-text id="code" label="Код" required="true" control-style="width:280px" length="5">
                    <dependencies>
                        <enabling-condition on="firstPublishedVersionFromDate">
                            typeof firstPublishedVersionFromDate == 'undefined' || firstPublishedVersionFromDate == null
                        </enabling-condition>
                    </dependencies>
                </input-text>
                <input-text id="name" label="Наименование" required="true"
                                 control-style="width:300px" length="250"/>
            </row>
        </fields>
    </form>
</simple-page>
