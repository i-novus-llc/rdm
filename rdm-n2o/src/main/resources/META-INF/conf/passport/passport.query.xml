<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="passport"
       name="Паспорт справочника">
    <unique filters="id" result-mapping="#this">
        <rest>/refBook/{id}</rest>
    </unique>

    <fields>
        <field id="id" domain="integer">
            <select mapping="['id']"/>
            <filters>
                <eq filter-id="id">id={id}</eq>
            </filters>
        </field>

        <field id="code" domain="string">
            <select mapping="['code']"/>
        </field>

        <field id="name" domain="string">
            <select mapping="['name']"/>
        </field>

        <field id="shortName" domain="string">
            <select mapping="['shortName']"/>
        </field>

        <field id="fullName" domain="string">
            <select mapping="['fullName']"/>
        </field>

        <field id="fromDate" domain="date">
            <select mapping="['fromDate']"/>
        </field>

        <field id="firstPublishedVersionFromDate">
            <select mapping="['firstPublishedVersionFromDate']"/>
        </field>

        <field id="version" domain="string">
            <select mapping="['version']"/>
        </field>

        <field id="annotation">
            <select mapping="['annotation']"/>
        </field>

        <field id="comment">
            <select mapping="['comment']"/>
        </field>

        <field id="recordsCount">
            <select mapping="['recordsCount']"/>
        </field>

    </fields>
</query>