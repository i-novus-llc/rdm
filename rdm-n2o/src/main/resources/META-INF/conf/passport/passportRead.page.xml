<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-3.0"
      xmlns:fs="http://n2oapp.net/framework/config/schema/fieldset-3.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0">
    <object-id>passport</object-id>
    <layout>n2o/layout/single</layout>
    <name>Просмотр паспорта справочника</name>

    <!--NSI-M-3-->

    <regions>
        <region place="single" type="none">
            <container id="main">
                <wgt:edit-form>
                    <wgt:query-id>passport</wgt:query-id>
                    <wgt:model>query</wgt:model>
                    <wgt:modal-width>750px</wgt:modal-width>

                    <fs:field-set field-label-location="top" style="margin-left:5px">
                        <ctrl:output-text id="code" label="1.Код" label-style="font-weight:bold"/>
                        <ctrl:output-text id="fullName" label="2.Полное наименование" label-style="font-weight:bold" control-style="width:700px"/>
                        <ctrl:output-text id="shortName" label="3.Краткое наименование" label-style="font-weight:bold" control-style="width:700px"/>
                        <ctrl:output-text id="annotation" label="4.Аннотация" label-style="font-weight:bold" control-style="width:700px">
                            <ctrl:set-value-expression><![CDATA[ annotation.replace('<p>', '').replace('</p>', '');]]></ctrl:set-value-expression>
                        </ctrl:output-text>
                        <ctrl:output-text id="firstPublicVersionFromDate" label="5.Дата публикации первой версии" label-style="font-weight:bold"/>
                        <ctrl:output-text id="fromDate" label="6.Дата публикации текущей версии" label-style="font-weight:bold"/>
                        <ctrl:output-text id="version" label="7.Номер текущей версии" label-style="font-weight:bold"/>
                        <ctrl:output-text id="recordsCount" label="8.Количество записей в текущей версии" label-style="font-weight:bold"/>
                        <ctrl:output-text id="comment" label="9.Изменения в текущей версии" label-style="font-weight:bold" control-style="width:700px">
                            <ctrl:set-value-expression><![CDATA[ annotation.replace('<p>', '').replace('</p>', ''); ]]></ctrl:set-value-expression>
                        </ctrl:output-text>
                    </fs:field-set>
                </wgt:edit-form>
            </container>
        </region>
    </regions>

</page>
