<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-3.0" name="Публикация справочника">

    <operations>
        <operation id="publishDraft" submit-label="Опубликовать" confirm="false">
            <invocation>
                <java class="ru.inovus.ms.rdm.n2o.service.RefBookPublishController"
                      method="publishDraft">
                    <spring/>
                    <arguments>
                        <argument type="primitive" name="draftId" class="java.lang.Integer"/>
                        <argument type="primitive" name="optLockValue" class="java.lang.Integer"/>
                    </arguments>
                </java>
            </invocation>
            <in-parameters>
                <param id="version.id" mapping="[0]" domain="integer" mapper="spel"/>
                <param id="version.optLockValue" mapping="[1]" domain="integer" mapper="spel"/>
            </in-parameters>
            <out-parameters>
                <param id="opId" mapping="toString()" default-value="123" domain="string"/>
            </out-parameters>
        </operation>

        <operation id="publishAndRefresh" submit-label="Опубликовать и обновить ссылки" confirm="false">
            <invocation>
                <java class="ru.inovus.ms.rdm.n2o.service.RefBookPublishController"
                      method="publishAndRefresh">
                    <spring/>
                    <arguments>
                        <argument type="primitive" name="draftId" class="java.lang.Integer"/>
                        <argument type="primitive" name="optLockValue" class="java.lang.Integer"/>
                    </arguments>
                </java>
            </invocation>
            <in-parameters>
                <param id="version.id" mapping="[0]" domain="integer" mapper="spel"/>
                <param id="version.optLockValue" mapping="[1]" domain="integer" mapper="spel"/>
            </in-parameters>
            <out-parameters>
                <param id="opId" mapping="toString()" domain="string"/>
            </out-parameters>
        </operation>

    </operations>

</object>
