<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0" name="Реестр НСИ">
    <regions>
        <region place="single">
            <form id="version_select" query-id="refBookVersion">
                <fields>
                    <!-- Поля для передачи динамичных атрибутов из versionList при редактировании записи -->
                    <!-- NB: Used as master-field-id="id" in depends-on="version_select" ? -->
                    <output-text id="id" visible="false">
                        <dependencies>
                            <set-value on="version">version.id</set-value>
                        </dependencies>
                    </output-text>

                    <output-text id="optLockValue">
                        <dependencies>
                            <set-value on="version">version.optLockValue</set-value>
                        </dependencies>
                    </output-text>

                    <select id="version" label="Версия" cleanable="false"
                            query-id="versionList" label-field-id="version">
                        <pre-filters>
                            <eq field-id="refBookId" value="{refBookId}"/>
                        </pre-filters>
                        <!-- NB: Реализовать единую точку перехода в режим редактирования -->
                        <validations>
                            <condition id="refBookHasDraft" severity="warning"
                                       message="Справочник содержит неопубликованную версию">
                                (draftVersionId == null || version.id == draftVersionId)
                            </condition>
                            <condition id="isNotLastPublished" severity="warning"
                                       message="Выбранная версия справочника не является последней опубликованной версией">
                                (version.id == draftVersionId || version.id == lastPublishedVersionId)
                            </condition>
                        </validations>
                    </select>
                </fields>

                <toolbar place="bottomLeft">
                    <sub-menu label="Действия">
                        <menu-item label="Опубликовать"
                                   visibility-condition="version.status=='DRAFT' &amp;&amp; !version.hasConflict">
                            <show-modal page-id="publish" upload="defaults">
                                <pre-filters>
                                    <eq field-id="version.id" value="{version.id}"/>
                                    <eq field-id="version.optLockValue" value="{version.optLockValue}"/>
                                </pre-filters>
                            </show-modal>
                        </menu-item>
                        <menu-item label="Обновить ссылки"
                                   visibility-condition="version.isLast &amp;&amp; version.hasRefreshedConflict">
                            <invoke operation-id="refreshReferrer"/>
                        </menu-item>
                        <menu-item label="Загрузить данные" visibility-condition="version.status=='DRAFT'">
                            <show-modal page-id="uploadData" submit-operation-id="uploadData" upload="defaults"
                                        redirect-target="application"
                                        redirect-url-after-submit="${rdm.context-path}/main/:refBookId/edit">
                                <pre-filters>
                                    <eq field-id="versionId" value="{version.id}"/>
                                </pre-filters>
                            </show-modal>
                        </menu-item>
                        <menu-item label="Загрузить из файла">
<!--                        NB: Реализовать для черновика предупреждение перед открытием диалога // NNO-1644 -->
                            <show-modal page-id="uploadFile" submit-operation-id="uploadFromFile" upload="defaults"
                                        redirect-target="application"
                                        redirect-url-after-submit="${rdm.context-path}/main/:refBookId/edit">
                                <pre-filters>
                                    <eq field-id="versionId" value="{version.id}"/>
                                </pre-filters>
                            </show-modal>
                        </menu-item>
                        <menu-item label="Скачать">
                            <show-modal page-id="downloadFile" upload="defaults">
                                <pre-filters>
                                    <eq field-id="versionId" value="{version.id}"/>
                                </pre-filters>
                            </show-modal>
                        </menu-item>
                    </sub-menu>
                </toolbar>
            </form>
        </region>

        <tabs place="single">
            <form ref-id="passport" name="Паспорт" id="passport_form"
                  depends-on="version_select" fetch-on-init="true"
                  master-field-id="id" detail-field-id="version.id" object-id="refBook">
                <toolbar place="bottomRight">
                    <!-- '.*_r$' паттерн названия кнопки, при котором обновляется виджет version_select -->
                    <!--см. RefreshTransformer-->
                    <!--to-do: сделать отдельную кнопку без рефреша для редактирования черновика-->
                    <button label="Изменить" id="editPassport_r">
                        <invoke operation-id="edit" close-after-success="false" />
                    </button>
                </toolbar>
            </form>

            <table ref-id="structure" name="Структура" id="structure_table"
                   upload="query" depends-on="version_select" fetch-on-init="true"
                   master-field-id="id" detail-field-id="versionId">
                <toolbar place="bottomRight">
                    <button label="Добавить" id="createAttribute_r"
                            widget-id="version_select" model="resolve">
                        <show-modal page-id="attribute" submit-operation-id="createAttribute" upload="defaults">
                            <pre-filters>
                                <eq field-id="versionId" value="{version.id}" ref-model="resolve" ref-widget-id="version_select"/>
                                <eq field-id="optLockValue" value="{optLockValue}" ref-model="resolve" ref-widget-id="version_select"/>
                            </pre-filters>
                        </show-modal>
                    </button>
                    <button label="Изменить" id="editAttribute_r">
                        <show-modal page-id="attribute" submit-operation-id="updateAttribute" submit-model="resolve">
                            <pre-filters>
                                <eq field-id="versionId" value="{versionId}"/>
                                <eq field-id="code" value="{code}"/>
                                <eq field-id="optLockValue" value="{optLockValue}" ref-model="resolve" ref-widget-id="version_select"/>
                            </pre-filters>
                        </show-modal>
                    </button>
                    <button label="Удалить" id="deleteAttribute_r" color="danger" icon="fa fa-trash"
                            enabling-condition="!(isPrimary &amp;&amp; (isReferrer || hasReferrer))">
                        <invoke operation-id="delete" close-after-success="false"/>
                    </button>
                </toolbar>
            </table>

            <table src="DataGrid" name="Данные" id="dataTable"
                   query-id="data" depends-on="version_select" fetch-on-init="true"
                   master-field-id="id" detail-field-id="versionId" object-id="data">
                <toolbar place="topRight">
                    <!--to-do: сделать отдельные кнопки без рефреша для редактирования черновика-->
                    <button id="createRecord_r" label="Добавить строку" icon="fa fa-plus"
                            widget-id="version_select" model="resolve"
                            enabling-condition="!version.isEmptyStructure">
                        <show-modal page-id="dataRecordPage?{id}_create" upload="query" route="/create"
                                    submit-operation-id="create" refresh-widget-id="version_select">
                            <pre-filters>
                                <eq field-id="id" value="0"/>
                                <eq field-id="optLockValue" value="{optLockValue}" ref-model="resolve" ref-widget-id="version_select"/>
                                <eq field-id="dataAction" value="create"/>
                            </pre-filters>
                        </show-modal>
                    </button>
                    <!-- порядок кнопок в данном toolbar важен, так как эта кнопка изменяется в UpdateDependencyTransformer-->
                    <button id="updateRecord_r" label="Изменить строку" icon="fa fa-pencil"
                            widget-id="version_select" model="resolve">
                        <show-modal page-id="dataRecordPage?{id}_edit" upload="query" route="/update"
                                    submit-operation-id="update" refresh-widget-id="version_select">
                            <pre-filters>
                                <eq field-id="id" value="{id}" ref-model="resolve" ref-widget-id="dataTable"/>
                                <eq field-id="optLockValue" value="{optLockValue}" ref-model="resolve" ref-widget-id="version_select"/>
                                <eq field-id="dataAction" value="edit"/>
                            </pre-filters>
                        </show-modal>
                    </button>
                    <button id="deleteRecord_r" label="Удалить строку" color="danger" icon="fa fa-trash">
                        <invoke operation-id="delete" refresh-widget-id="version_select" route="/delete"/>
                    </button>
                    <button id="deleteAllRecords_r" label="Удалить все" color="danger" icon="fa fa-trash">
                        <invoke operation-id="deleteAll" refresh-widget-id="version_select" route="/deleteAll"/>
                    </button>
                </toolbar>
            </table>

            <table src="DataGrid" name="Данные с конфликтами" id="dataTableWithConflicts"
                   query-id="data" depends-on="version_select" fetch-on-init="true"
                   master-field-id="id" detail-field-id="versionId" object-id="data">
                <pre-filters>
                    <eq field-id="hasDataConflict" value="true"/>
                </pre-filters>
                <toolbar place="topRight">
                    <button id="updateConflictedRecord_r" label="Изменить строку" icon="fa fa-pencil"
                            widget-id="version_select" model="resolve">
                        <show-modal page-id="dataRecordPage?{id}_edit" upload="query" route="/update"
                                    submit-operation-id="update" refresh-widget-id="version_select">
                            <pre-filters>
                                <eq field-id="id" value="{id}" ref-model="resolve" ref-widget-id="dataTableWithConflicts"/>
                                <eq field-id="optLockValue" value="{optLockValue}" ref-model="resolve" ref-widget-id="version_select"/>
                                <eq field-id="dataAction" value="edit"/>
                            </pre-filters>
                        </show-modal>
                    </button>
                    <button id="deleteConflictedRecord_r" label="Удалить строку" color="danger" icon="fa fa-trash">
                        <invoke operation-id="delete" refresh-widget-id="version_select" route="/delete"/>
                    </button>
                </toolbar>
            </table>
        </tabs>
    </regions>
</page>