<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-3.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0">
    <object-id>refBook</object-id>
    <layout>n2o/layout/single</layout>
    <name>Администрирование/Справочники</name>

    <!--NSI-M-4-->

    <regions>
        <region place="single" type="none">
            <container id="main">
                <wgt:table>
                    <wgt:query-id>refBook</wgt:query-id>

                    <wgt:filters opened="true">
                        <ctrl:input-text id="name" label="Наименование справочникаe"/>
                        <ctrl:input-text id="code" label="Код" control-style="width:100px"/>
                        <ctrl:date-interval id="fromDate" label="Дата последней публикации" control-style="width:230px"/>
                        <ctrl:input-select id="status" label="Статус справочника">
                            <ctrl:options>
                                <ctrl:option>{"id":"PUBLISHED", "name":"Опубликован"}</ctrl:option>
                                <ctrl:option>{"id":"DRAFT", "name":"Черновик"}</ctrl:option>
                                <ctrl:option>{"id":"ARCHIVED", "name":"Архив"}</ctrl:option>
                            </ctrl:options>
                        </ctrl:input-select>
                    </wgt:filters>

                    <wgt:action-menu>
                        <wgt:menu-item id="create" label="Добавить" context="false">
                            <wgt:event>
                                <wgt:open-page page-id="passport" action-id="create" after-submit="closeModal"
                                               create-more="false" page-name="Добавление справочника"
                                               refresh-after-submit="true"/>
                            </wgt:event>
                        </wgt:menu-item>
                        <wgt:menu-item id="update" label="Изменить" default="false" color="btn-primary">
                            <wgt:event>
                                <wgt:open-page page-id="blank" page-name="Список версий справочника {main.code} {main.shortName}"/>
                            </wgt:event>
                        </wgt:menu-item>
                    </wgt:action-menu>

                    <wgt:columns>
                        <wgt:column column-field-id="code" name="Код" width="100px"/>
                        <wgt:column column-field-id="shortName" name="Краткое наименование">
                            <wgt:link id="shortName_readVersion">
                                <wgt:show-modal page-id="passportRead" master-field-id="id" detail-field-id="id"
                                        page-name="Паспорт справочника - {main.code} {main.shortName}"/>
                            </wgt:link>
                        </wgt:column>
                        <wgt:column column-field-id="fullName" name="Полное наименование">
                            <wgt:link id="fullName_readVersion">
                                <wgt:show-modal page-id="passportRead" master-field-id="id" detail-field-id="id"
                                        page-name="Паспорт справочника - {main.code} {main.shortName}"/>
                            </wgt:link>
                        </wgt:column>
                        <wgt:column column-field-id="version" name="Версия"/>
                        <wgt:column column-field-id="fromDate" name="Последняя публикация"/>
                    </wgt:columns>

                    <wgt:sortings>
                        <wgt:sorting sorting-field-id="code" direction="ASC"/>
                    </wgt:sortings>

                </wgt:table>
            </container>
        </region>
    </regions>
</page>