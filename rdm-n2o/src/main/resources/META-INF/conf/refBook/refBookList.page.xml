<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-1.0"
      xmlns:wgt="http://n2oapp.net/framework/config/schema/n2o-widget-3.0"
      xmlns:ctrl="http://n2oapp.net/framework/config/schema/n2o-control-1.0">
    <object-id>refBook</object-id>
    <layout>n2o/layout/single</layout>
    <name>Администрирование/Справочники</name>

    <!--NSI-M-4-->

    <regions>
        <region place="single" type="none">
            <container id="main">
                <wgt:table>
                    <wgt:query-id>refBookList</wgt:query-id>

                    <wgt:filters opened="true">
                        <ctrl:input-text id="name" label="Наименование справочника"/>
                        <ctrl:input-text id="code" label="Код" control-style="width:100px"/>
                        <ctrl:date-interval id="lastPublishedVersionFromDate" label="Дата последней публикации"
                                            control-style="width:230px" begin-default-time="00:00" end-default-time="23:59"/>
                        <ctrl:input-select id="status" label="Статус справочника">
                            <ctrl:options>
                                <ctrl:option>{"id":"PUBLISHED", "name":"Опубликован"}</ctrl:option>
                                <ctrl:option>{"id":"DRAFT", "name":"Черновик"}</ctrl:option>
                                <ctrl:option>{"id":"ARCHIVED", "name":"Архив"}</ctrl:option>
                            </ctrl:options>
                        </ctrl:input-select>
                    </wgt:filters>

                    <wgt:action-menu>
                        <wgt:menu-item id="create" label="Добавить" context="false">
                            <wgt:event>
                                <wgt:open-page page-id="passport" page-name="Добавление справочника"
                                               refresh-after-submit="true"/>
                            </wgt:event>
                        </wgt:menu-item>
                        <wgt:menu-item id="update" label="Изменить" default="false" color="btn-primary">
                            <wgt:event>
                                <wgt:open-page page-id="versionList" master-field-id="refBookId" detail-field-id="refBookId"
                                               page-name="Список версий справочника {main.code} {main.shortName}">
                                    <wgt:pre-filters>
                                        <wgt:pre-filter field-id="archived" ref="archived"/>
                                        <wgt:pre-filter field-id="refBookHasPublishingVersion" ref="refBookHasPublishingVersion"/>
                                    </wgt:pre-filters>
                                </wgt:open-page>
                            </wgt:event>
                        </wgt:menu-item>
                        <wgt:menu-item id="delete" label="Удалить">
                            <wgt:event>
                                <wgt:invoke-action action-id="delete" confirmation="true"/>
                            </wgt:event>
                            <wgt:conditions>
                                <wgt:visibility-condition>
                                    <wgt:expression><![CDATA[
                                        !archived && (typeof fromDate == 'undefined' || fromDate == null)
                                    ]]></wgt:expression>
                                </wgt:visibility-condition>
                                <wgt:enabling-condition>
                                    <wgt:expression>!refBookHasPublishingVersion</wgt:expression>
                                    <wgt:tooltip>Недоступно во время публикации версии. Процесс может занять длительное время</wgt:tooltip>
                                </wgt:enabling-condition>
                            </wgt:conditions>
                        </wgt:menu-item>
                        <wgt:menu-item id="archived" label="В архив" context="true" icon="icomoon-file-zip">
                            <wgt:event>
                                <wgt:invoke-action action-id="archived"/>
                            </wgt:event>
                            <wgt:conditions>
                                <wgt:visibility-condition>
                                    <wgt:expression><![CDATA[
                                        !archived && typeof fromDate != 'undefined' && fromDate != null
                                    ]]></wgt:expression>
                                </wgt:visibility-condition>
                                <wgt:enabling-condition>
                                    <wgt:expression>!refBookHasPublishingVersion</wgt:expression>
                                    <wgt:tooltip>Недоступно во время публикации версии. Процесс может занять длительное время. Обновите страницу</wgt:tooltip>
                                </wgt:enabling-condition>
                            </wgt:conditions>
                        </wgt:menu-item>
                    </wgt:action-menu>

                    <wgt:columns>
                        <wgt:column column-field-id="code" name="Код" width="100px"/>
                        <wgt:column column-field-id="shortName" name="Краткое наименование">
                            <wgt:link id="shortName_readVersion">
                                <wgt:show-modal page-id="passportRead" master-field-id="id" detail-field-id="id"
                                        page-name="Паспорт справочника - {main.code} {main.shortName}"/>
                            </wgt:link>
                        </wgt:column>
                        <wgt:column column-field-id="fullName" name="Полное наименование">
                            <wgt:link id="fullName_readVersion">
                                <wgt:show-modal page-id="passportRead" master-field-id="id" detail-field-id="id"
                                        page-name="Паспорт справочника - {main.code} {main.shortName}"/>
                            </wgt:link>
                        </wgt:column>
                        <wgt:column column-field-id="displayVersion" name="Версия"/>
                        <wgt:column column-field-id="lastPublishedVersionFromDate" name="Последняя публикация"/>
                    </wgt:columns>

                    <wgt:sortings>
                        <wgt:sorting sorting-field-id="code" direction="ASC"/>
                    </wgt:sortings>

                </wgt:table>
            </container>
        </region>
    </regions>
</page>