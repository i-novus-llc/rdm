<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0" object-id="refBook">
    <list result-mapping="['content']" count-mapping="['totalElements']">
        <java class="ru.inovus.ms.rdm.service.api.RefBookService"
              method="search" >
            <spring bean="refBookServiceJaxRsProxyClient"/>
        <arguments>
            <argument type="criteria"
                      class="ru.inovus.ms.rdm.model.RefBookCriteria"/>
        </arguments>
        </java>
    </list>

    <fields>
        <field id="id" domain="integer">
            <select mapping="id"/>
            <filters>
                <eq filter-id="id" mapping="id"/>
            </filters>
        </field>

        <field id="code" domain="string">
            <select mapping="code"/>
            <filters>
                <eq filter-id="code" mapping="code"/>
            </filters>
            <sorting mapping="codeDir">sort=code,{codeDir}</sorting>
        </field>

        <field id="status" domain="string">
            <select mapping="status"/>
            <filters>
                <eq filter-id="status" mapping="status"/>
            </filters>
        </field>

        <field id="name" domain="string">
            <select mapping="passport['name']"/>
            <filters>
                <eq filter-id="name" mapping="passport['name']"/>
            </filters>
            <sorting mapping="nameDir">sort=name,{nameDir}</sorting>
        </field>

        <field id="displayVersion" domain="string">
            <select mapping="displayVersion"/>
        </field>

        <field id="lastPublishedVersionFromDate" domain="date">
            <select mapping="['lastPublishedVersionFromDate']"/>
            <filters>
                <more filter-id="lastPublishedVersionFromDateInterval.begin"/>
                <less filter-id="lastPublishedVersionFromDateInterval.end"/>
            </filters>
            <sorting mapping="lastPublishedVersionFromDateDir">sort=lastPublishedVersionFromDate, {lastPublishedVersionFromDateDir}</sorting>
        </field>
    </fields>
</query>