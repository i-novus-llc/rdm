<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0" object-id="refBookTypeList">

    <list result-mapping="content" count-mapping="totalElements">
        <java class="ru.i_novus.ms.rdm.n2o.service.RefBookController"
              method="getTypeList">
            <spring/>
        </java>
    </list>

    <unique result-mapping="#this" filters="id">
        <java method="getTypeItem" class="ru.i_novus.ms.rdm.n2o.service.RefBookController">
            <spring/>

            <arguments>
                <argument name="criteria" type="criteria"
                          class="ru.i_novus.ms.rdm.n2o.criteria.RefBookTypeCriteria"/>
            </arguments>
        </java>
    </unique>

    <fields>

        <field id="id" domain="string">
            <select/>
            <filters>
                <eq filter-id="id" mapping="['criteria'].id"/>
            </filters>
        </field>

        <field id="name" domain="string">
            <select/>
            <filters>
                <eq filter-id="name" mapping="['criteria'].name"/>
            </filters>
        </field>

    </fields>
</query>