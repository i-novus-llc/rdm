<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0" name="Список версий справочника">
    <list result-mapping="content" count-mapping="totalElements" filters="refBookId">
        <java method="getVersions" class="ru.inovus.ms.rdm.service.api.RefBookService">
            <spring bean="refBookServiceJaxRsProxyClient"/>
            <arguments>
                <argument type="criteria" class="ru.inovus.ms.rdm.model.VersionCriteria"/>
            </arguments>
        </java>
    </list>
    <unique filters="id" result-mapping="#this">
        <java method="getById">
            <spring bean="versionServiceJaxRsProxyClient"/>
            <arguments>
                <argument type="primitive" name="versionId"/>
            </arguments>
        </java>
    </unique>

    <fields>
        <field id="id" domain="integer">
            <select/>
            <filters>
                <eq filter-id="id" mapping="[0]" domain="integer"/>
            </filters>
        </field>

        <field id="refBookId" domain="integer">
            <select/>
            <filters>
                <eq filter-id="refBookId" mapping="refBookId" domain="integer"/>
            </filters>
        </field>

        <field id="code" domain="string" name="Код справочника">
            <select/>
        </field>

        <field id="name" domain="string">
            <select mapping="passport['name']"/>
            <filters>
                <eq filter-id="name" mapping="passport['name']"/>
            </filters>
        </field>

        <field id="fromDate" domain="date">
            <select/>
        </field>

        <field id="version" domain="string">
            <select mapping="version?:'Новая (изм. ' + editDate?.format(T(java.time.format.DateTimeFormatter).ofPattern('dd.MM.yyyy')) + ')'"/>
            <filters/>
        </field>

        <field id="status" domain="string">
            <select/>
        </field>

        <field id="editDate" domain="string">
            <select/>
        </field>

        <field id="archived" domain="boolean">
            <select/>
        </field>

        <field id="excludeDraft" domain="boolean">
            <filters/>
        </field>
    </fields>
</query>